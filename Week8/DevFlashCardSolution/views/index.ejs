<body>

 <div class="container">
  <div class="row">
   <div class="col-11 col-lg-6 my-3">
    <h3 class="text-capitalize">devflashcards</h3>
    <button class="btn text-capitalize my-2 show-btn" id="show-btn">add question</button>
    <div class="card card-body my-3 question-card">

        <div id="card-holder">
            <div id="flip-card" class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front" id="question_front">
                        Front
                    </div>
                    <div class="flip-card-back" id="answer_back">
                        Back
                    </div>
                </div>
                
            </div>
            <a href="#" id="next">Next Card</a>
        </div>

         <div id="create-form">        
            <!-- close btn -->
            <a href="#" class="close-btn mt-0">
            <i class="fas fa-window-close"></i>
            </a>
            <!-- end of close btn -->
            <div class="feedback alert w-75 text-capitalize">
            customer feedback
            </div>
            <form id="question-form" method="POST" action="/card">
            <!-- single input -->
            <h5 class="text-capitalize">category</h5>
            <div class="form-group">
            <input class="w-100" id="category-input" name="category">
            </div>
            <!-- end of single input -->
            <!-- single input -->
            <h5 class="text-capitalize">question</h5>
            <div class="form-group">
            <textarea class="w-100" id="question-input" name="question" rows="3"></textarea>
            </div>
            <!-- end of single input -->
            <!-- single input -->
            <h5 class="text-capitalize">answer</h5>
            <div class="form-group">
            <textarea class="w-100" id="answer-input" name="answer" rows="3"></textarea>
            </div>
            <!-- end of single input -->
            <button type="submit" class="btn submitBtn text-capitalize w-50">save</button>
            </form>
        </div>


    </div>



   </div>
  </div>

  <div class="row px-2" id="categories-list">
   <!-- <div class="col-md-4"> -->
    <!--Template for card data-->
