<body>

 <div class="container">
  <div class="row">
   <div class="col-11 col-lg-6 my-3">
    <h3 class="text-capitalize">TheAutomaticFlashCardGenerator</h3>
    <a href="/topics">see topics</a>
    <button class="btn text-capitalize my-2 show-btn" id="show-btn">add topic</button>
    <div class="card card-body my-3 topic-card">
         <div id="create-form">        
            <form method="POST" action="/topic">
            <!-- single input -->
            <h5 class="text-capitalize">id</h5>
            <div class="form-group">
            <input type="text" id="id-input" name="id">
            </div>
            <!-- end of single input -->
            <!-- single input -->
            <h5 class="text-capitalize">topic</h5>
            <div class="form-group">
            <textarea class="w-100" id="topic-input" name="topic" rows="3"></textarea>
            </div>
            <!-- end of single input -->
            <button type="submit" class="btn submitBtn text-capitalize w-50">save</button>
            </form>
        </div>
    </div>
    <button class="btn text-capitalize my-2 show-btn" id="show-btn">add category</button>
    <div class="card card-body my-3 topic-card">
         <div id="create-form">        
            <form method="POST" action="/category">
            <!-- single input -->
            <h5 class="text-capitalize">category id</h5>
            <div class="form-group">
            <input type="text" id="id-input" name="id">
            </div>
            <!-- end of single input -->
            <!-- single input -->
            <h5 class="text-capitalize">category</h5>
            <div class="form-group">
            <textarea class="w-100" id="topic-input" name="category" rows="3"></textarea>
            </div>
            <!-- end of single input -->
            <button type="submit" class="btn submitBtn text-capitalize w-50">save</button>
            </form>
        </div>
    </div>
    <button class="btn text-capitalize my-2 show-btn" id="show-btn">add a card</button>
    <div class="card card-body my-3 topic-card">
         <div id="create-form">        
            <form method="POST" action="/card">
            <!-- single input -->
            <h5 class="text-capitalize">category id</h5>
            <div class="form-group">
            <input type="text" id="id-input" name="id">
            </div>
            <!-- end of single input -->
            <!-- single input -->
            <h5 class="text-capitalize">prompt</h5>
            <div class="form-group">
            <textarea class="w-100" id="topic-input" name="prompt" rows="3"></textarea>
            <h5 class="text-capitalize">question</h5>
            <div class="form-group">
            <textarea class="w-100" id="topic-input" name="question" rows="3"></textarea>
            <h5 class="text-capitalize">answer</h5>
            <div class="form-group">
            <textarea class="w-100" id="topic-input" name="answer" rows="3"></textarea>
            </div>
            <!-- end of single input -->
            <button type="submit" class="btn submitBtn text-capitalize w-50">save</button>
            </form>
        </div>
    </div>
